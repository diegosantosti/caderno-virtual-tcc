<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="button_circle_main">
        <item name="android:padding">@dimen/margin_button_circle</item>
    </style>
    
    <style name="text_titulo_main">
       	<item name="android:textColor">@color/text_titulo_main</item>
       	<item name="android:gravity">center</item>
       	<item name="android:textStyle">bold</item>
       	<item name="android:textSize">25sp</item>
    </style>
    
    <style name="edit_pesquisa">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/padding_edit_pesq</item>
        <item name="android:background">@drawable/edit_text_pesquisa</item>
        <item name="android:textColor">@color/font_edit_main</item>
        <!--  <item name="android:focusable">false</item>-->
    </style>
    
    <style name="edit_text_pop_up">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/padding_edit_pesq</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/font_edit</item>
        <item name="android:singleLine">true</item>
        <!--  <item name="android:focusable">false</item>-->
    </style>
    
    <style name="text_pop_up">
       	<item name="android:textColor">@color/font_text_pop_up</item>
       	<item name="android:textStyle">bold</item>
       	<item name="android:textSize">18sp</item>
       	<item name="android:gravity">center</item>
    </style>
    
    <style name="text_integrantes">
       	<item name="android:textColor">@color/font_text_about</item>
       	<item name="android:textStyle">bold</item>
       	<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">40dp</item>
		<item name="android:gravity">center</item>
    </style>
    
    <style name="text_titulos_integrantes">
       	<item name="android:textColor">@color/font_text_about</item>
       	<item name="android:textStyle">bold</item>
       	<item name="android:textSize">22sp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingTop">15dp</item>
		<item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="text_usjt">
       	<item name="android:textColor">@color/font_text_about</item>
       	<item name="android:textStyle">bold</item>
       	<item name="android:textSize">28sp</item>
    </style>
    
    <style name="text_app_name_about">
       	<item name="android:textColor">@color/font_text_about</item>
       	<item name="android:textStyle">bold</item>
       	<item name="android:textSize">32sp</item>
    </style>
    
    <style name="text_agenda">
       	<item name="android:textColor">@color/fonte_list_agenda</item>
       	<item name="android:textSize">12sp</item>
    </style>
    
    <style name="text_titulo_agenda">
       	<item name="android:textColor">@color/fonte_list_agenda</item>
       	<item name="android:textStyle">bold</item>
       	<item name="android:textSize">16sp</item>
    </style>
    
    <style name="text_dataHora" parent="@android:style/Widget.Holo.Light.Spinner">
		<item name="android:editable">false</item>
		<item name="android:paddingBottom">7dp</item>
		<item name="android:paddingRight">14dp</item>
		<item name="android:textColor">@color/fonte_list_agenda</item>
		<item name="android:textSize">14sp</item>
    </style>
    
