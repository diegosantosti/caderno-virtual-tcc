<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/bg_popup"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/txtNovoLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/novo_lembrete"
        android:layout_margin="@dimen/margin_components_popoup"
        style="@style/text_pop_up"/>
    
    <EditText 
        android:id="@+id/edtDescLembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hist_descricao"
        android:layout_margin="@dimen/margin_components_popoup"
        style="@style/edit_text_pop_up"/>
    
    <TextView 
        android:id="@+id/edtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_components_popoup"
        android:text="01/07/2014"
        android:clickable="true"
        style="@style/edit_text_pop_up"/>
    
    <TextView 
        android:id="@+id/edtHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19H00"
        android:layout_margin="@dimen/margin_components_popoup"
        style="@style/edit_text_pop_up"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vincular_materia"
        android:layout_margin="@dimen/margin_components_popoup"
        style="@style/text_pop_up"/>
    
    <Spinner
        android:id="@+id/spinnerCaderno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_components_popoup"
        android:prompt="@string/prompt_sel_caderno"/>
    
    <Spinner
        android:id="@+id/spinnerMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_components_popoup"
        android:prompt="@string/prompt_sel_materia"/>
    
        
    

</LinearLayout>
