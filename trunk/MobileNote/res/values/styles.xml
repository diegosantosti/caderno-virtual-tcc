<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Tema sem ActionBar -->
    
    <style name="ThemeMobileNote.NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar">
        
    </style>
    
    <!-- Tema personalizado -->
    
    <style name="ThemeMobileNote" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MobileNote.ActionBar.Solid</item>
		<item name="android:actionMenuTextColor">@android:color/white</item>
		<item name="android:actionMenuTextAppearance">@style/teste</item>
    </style>
    
    <style name="MobileNote.ActionBar.Solid" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/bg_actionBar</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/MobileNote.ActionBarTextStyle</item>  
    </style>
    
    <style name="teste">
        <item name="android:textSize">17sp</item>
        
    </style>

    <style name="MobileNote.ActionBarTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">@android:color/white</item>
  
    </style>
</resources>
